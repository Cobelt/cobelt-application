.cnil-overlay
  position fixed
  bottom 0
  left 0
  width 100%
  background-color #2c3e50
  padding 20px
  z-index 50
  margin-bottom 0
  opacity 1
  color #ecf0f1

  &.fade-out
    opacity 0
    transition 1

  div.lower
    margin-top 0.7rem

  a
    opacity 1
    cursor pointer
    border solid 2px
    border-radius 3rem
    padding 0.3rem 0.7rem
    background-color #34495e
    width auto
    color #ecf0f1

    &>i
      margin-left 0.7rem

    &:hover
      opacity 1
      filter brightness(1.2)