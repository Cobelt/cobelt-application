.card
  .card-image
    display inline-block
    overflow hidden
    height 50rem

    img
      object-fit cover

      width auto
      min-width 100%
      max-width 100%

      min-height 100%

    .card-header
      position absolute
      bottom 0
      left 0
      width 100%
      background-color #333a

      span
        font-size 1.5rem

        &.card-title
          position initial
          min-width 30%
          max-width 80%

      .card-stats
        text-align right
        display inline-block
        min-width 20%
        max-width 70%
        padding 24px
        color #fff
        font-size 24px
        font-weight 300
