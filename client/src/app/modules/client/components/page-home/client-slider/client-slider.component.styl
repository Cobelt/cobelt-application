.slider

  .slides li.active
    opacity 1

.arrow
  cursor pointer
  z-index 50
  margin-top -20%
  position absolute
  filter invert(1) opacity(0.4)
  transition filter 500ms

  &:hover
    filter invert(1) opacity(0.7)
    transition filter 500ms

  &.left
    left 1.5rem

  &.right
    right 1.5rem

  img
    height 10rem
    width auto



.indicators
  bottom 50px !important
  z-index 100 !important